<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>@APP_NAME@</name>
  <summary>Install mobile Linux with ease</summary>
  <description>
    <p>
      Sidestep guides you through unlocking your Android device's bootloader and
      installing mobile Linux distributions like postmarketOS, Ubuntu Touch, and Mobian.
    </p>
    <p>Features:</p>
    <ul>
      <li>Automatic device detection via USB</li>
      <li>Step-by-step bootloader unlocking wizard</li>
      <li>One-click distro installation</li>
      <li>Real-time progress with terminal output</li>
      <li>Fail-safe design with clear warnings</li>
    </ul>
  </description>
  <branding>
    <color type="primary" scheme_preference="light">#62a0ea</color>
    <color type="primary" scheme_preference="dark">#1a5fb4</color>
  </branding>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <url type="homepage">https://github.com/tobagin/Sidestep</url>
  <url type="bugtracker">https://github.com/tobagin/Sidestep/issues</url>
  <developer id="io.github.tobagin">
    <name>tobagin</name>
  </developer>
  <content_rating type="oars-1.1"/>
  <releases>
    <release version="0.2.0" date="2026-02-16">
      <description>
        <p>Major feature release:</p>
        <ul>
          <li>Device browser for exploring supported devices and distributions</li>
          <li>15 supported devices across 9 manufacturers</li>
          <li>Multi-distro support: Droidian, Mobian, Ubuntu Touch, postmarketOS</li>
          <li>Android firmware flashing for pre-requisite firmware versions</li>
          <li>Bootloader lock detection and device variant support</li>
          <li>Interface and channel selection per distribution</li>
        </ul>
      </description>
    </release>
    <release version="0.1.0" date="2026-01-17">
      <description>
        <p>Initial release with MVP features:</p>
        <ul>
          <li>Support for Pixel 3a, OnePlus 6, and Surface Duo</li>
          <li>postmarketOS installation</li>
          <li>Guided bootloader unlocking</li>
        </ul>
      </description>
    </release>
  </releases>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>
</component>
